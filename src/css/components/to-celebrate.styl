.c-to-celebrate
  background white
  padding 2em 0
  text-align center

  &-heading
    color to-celebrate-color
    font-family font-family--serif
    font-size 2em
    margin 0 0 1em 0

  &-events
    display grid
    grid-template-columns 1fr
    grid-gap 0

    @media(min-width: small-width)
      grid-template-columns 1fr 1fr

  &-event
    background-position 50% 50%
    background-repeat no-repeat
    background-size cover
    box-shadow inset 0 0 5em 1em black
    color white
    min-height 75vh
    padding 2em 1em
    text-shadow 0 0 6px black
    display flex
    flex-direction column
    justify-content flex-start
    align-items center

    &--Singapore
      background-image url('img/1-altitude-bar.jpg')

    &--Liverpool
      background-image url('img/panoramic-34.jpg')

    &-what
      font-family font-family--serif
      font-size 3em
      margin 0 0 1rem 0
      line-height 1
      background #0004
      padding 0.75rem 1rem 0.5rem 1rem

    &-when
      margin 0 0 1em 0
      background #0004
      padding 0.5rem 1rem 0.5rem 1rem

    &-where
      border 2px solid white
      display inline-block
      margin 0
      padding 0.5em
      background #0004
