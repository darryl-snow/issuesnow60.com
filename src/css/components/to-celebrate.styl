.c-to-celebrate
  background white
  padding 2em
  text-align center

  &-heading
    color to-celebrate-color
    font-family font-family--serif
    font-size 2em
    margin 0 0 1em 0

  &-events
    display grid
    grid-template-columns 100%
    grid-gap 0

    @media(min-width: small-width)
      grid-template-columns 50% 50%

  &-event
    background-position 50% 50%
    background-repeat no-repeat
    background-size cover
    box-shadow inset 0 0 5em 1em black
    color white
    min-height 75vh
    padding 1em
    text-shadow 0 0 6px black

    &--Singapore
      background-image url('img/1-altitude-bar.jpg')

    &-what
      font-family font-family--serif
      font-size 4em
      margin 0

    &-when
      margin 0 0 1em 0

    &-where
      border 2px solid white
      display inline-block
      margin 0
      padding 0.5em
